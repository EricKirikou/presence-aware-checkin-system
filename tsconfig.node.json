{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2023"],
    "module": "CommonJS",
    "moduleResolution": "node16",
    "composite": true,
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "vite.config.ts",
    "mongo-api/**/*.ts",
    "mongo-api/**/*.js"
    "https://attendane-api.onrender.com"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
}